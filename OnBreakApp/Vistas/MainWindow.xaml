<mah:MetroWindow x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Vistas"
        mc:Ignorable="d"
        Title="OnBreakApp" Height="600" Width="1000">
    <Grid Background="#34274D">
        <Image HorizontalAlignment="Left" Height="73" Margin="20,13,0,0" VerticalAlignment="Top" Width="92" Source="/OnBreak.png"/>
        <Button x:Name="btn_adm_cliente" Click="btn_adm_cliente_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,65,0,0" Height="215" Width="445" Background="#2186C2"  FontSize="18" RenderTransformOrigin="0.542,0.52">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Image Source="/adm_clientes.png" Height="92" Width="124" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,0,0,0"/>
                <Label Content="Administración&#xA;      de Clientes" Foreground="White" Height="92" Width="224" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </StackPanel>
        </Button>
        <Button x:Name="btn_adm_contratos" Click="btn_adm_contratos_Click" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,65,50,0" Height="215" Width="445" Background="#7F55D4"  FontSize="18" RenderTransformOrigin="0.542,0.52">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Image Source="/adm_clientes.png" Height="92" Width="124" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,0,0,0"/>
                <Label Content="Administración&#xD;&#xA;   de Contratos" Foreground="White" Height="92" Width="224" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </StackPanel>
        </Button>
        <Button x:Name="btn_cliente" Click="btn_cliente_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,65" Height="215" Width="445" Background="#3959E8"  FontSize="18" RenderTransformOrigin="0.542,0.52">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Image Source="/adm_clientes.png" Height="92" Width="124" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,0,0,0"/>
                <Label Content="             Listado&#xD;&#xA;       de Clientes" Foreground="White" Height="92" Width="224" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </StackPanel>
        </Button>
        <Button x:Name="btn_contratos" Click="btn_contratos_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,65"  Height="215" Width="445" Background="#A145BB"  FontSize="18" RenderTransformOrigin="0.542,0.52">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Image Source="/adm_clientes.png" Height="92" Width="124" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,0,0,0"/>
                <Label Content="             Listado&#xA;    de Contratos" Foreground="White" Height="92" Width="224" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </StackPanel>
        </Button>

        <Button x:Name="btn_contraste" Tag="true" BorderThickness="0" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" FontWeight="Bold" Background="White">
            <StackPanel>
                <Image Source="/simbolo-de-circulo-de-contraste.png" Width="40"/>
            </StackPanel>
        </Button>
    </Grid>
</mah:MetroWindow>
