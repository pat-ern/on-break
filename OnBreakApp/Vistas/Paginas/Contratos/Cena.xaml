<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vistas.Paginas.Contratos"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Vistas.Paginas.Contratos.Cena"
      mc:Ignorable="d" 
      d:DesignHeight="394" d:DesignWidth="170"
      Title="Cena">

    <Grid>
        <Label Content="Modalidad de Servicio:" HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" FontSize="14" />
        <ComboBox x:Name="comboBoxModalidades" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Width="144" Height="28" SelectionChanged="comboBoxModalidades_SelectionChanged"/>
        <Label Content="Ambientación*:" HorizontalAlignment="Left" Margin="14,101,0,0" VerticalAlignment="Top" Height="37" Width="115" FontSize="14"/>
        <RadioButton x:Name="radioButtonAmbientacionBasica" Content="Básica" HorizontalAlignment="Left" Margin="16,138,0,0" VerticalAlignment="Top" Height="32" Width="72" Background="Transparent"/>
        <RadioButton x:Name="radioButtonAmbientacionPersonalizada" Content="Personalizada" HorizontalAlignment="Left" Margin="16,176,0,0" VerticalAlignment="Top" Height="30" Width="141" Background="Transparent"/>
        <Label Content="Música Ambiental:" HorizontalAlignment="Left" Margin="14,216,0,0" VerticalAlignment="Top" Height="38" Width="146" FontSize="14"/>
        <CheckBox x:Name="checkBoxMusicaAmbiental" Content="Sí" HorizontalAlignment="Left" Margin="21,253,0,0" VerticalAlignment="Top" Height="25" Width="52" Foreground="White"/>
        <Label Content="Local:" HorizontalAlignment="Left" Margin="17,288,0,0" VerticalAlignment="Top" Height="34" Width="62" FontSize="14"/>
        <RadioButton x:Name="radioButtonLocalOnBreak" Content="OnBreak" HorizontalAlignment="Left" Margin="20,321,0,0" VerticalAlignment="Top" Height="22" Width="108" Background="Transparent"/>
        <RadioButton x:Name="radioButtonLocalOtro" Content="Otro" HorizontalAlignment="Left" Margin="20,354,0,0" VerticalAlignment="Top" Height="22" Width="75" Background="Transparent"/>
    </Grid>
</Page>