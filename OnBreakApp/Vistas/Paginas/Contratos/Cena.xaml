<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vistas.Paginas.Contratos"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Vistas.Paginas.Contratos.Cena"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cena">

    <Grid>
        <Label x:Name="lbl_rutCliente" Content="Rut del Cliente:" HorizontalAlignment="Left" Margin="12,3,0,0" VerticalAlignment="Top" Width="154" FontSize="18"  Foreground="White"/>
        <Label x:Name="lbl_Rut" Content="Buscar" HorizontalAlignment="Left" Margin="250,7,0,0" VerticalAlignment="Top" Width="218" Foreground="White" BorderBrush="White" BorderThickness="1"/>
        <Button x:Name="btn_buscar" HorizontalAlignment="Left" Margin="477,4,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="-1.911,0.807" Height="32" Background="White" >
            <StackPanel>
                <Image Source="/Paginas/Contratos/buscar.png" Width="20"/>
            </StackPanel>
        </Button>
        <Label x:Name="lbl_razon" Content="Razón Social:" HorizontalAlignment="Left" Margin="12,40,0,0" VerticalAlignment="Top" Width="135" FontSize="18"  Foreground="White"/>
        <Label x:Name="lbl_razonSocial" Content="Razon Social" HorizontalAlignment="Left" Margin="250,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.086,-5.52" Width="217" 
               Foreground="White" BorderBrush="White" BorderThickness="1"/>
        <Label Content="Modalidad de Servicio:" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" />
        <ComboBox x:Name="comboBoxModalidades" HorizontalAlignment="Left" Margin="249,84,0,0" VerticalAlignment="Top" Width="219" Height="28"/>
        <Label Content="Ambientación*:" HorizontalAlignment="Left" Margin="14,120,0,0" VerticalAlignment="Top" Height="37" Width="187" FontSize="18" Foreground="White"/>
        <RadioButton x:Name="radioButtonAmbientacionBasica" Content="Básica" HorizontalAlignment="Left" Margin="250,119,0,0" VerticalAlignment="Top" Height="31" Width="88" Foreground="White" Background="Transparent"/>
        <RadioButton x:Name="radioButtonAmbientacionPersonalizada" Content="Personalizada" HorizontalAlignment="Left" Margin="390,119,0,0" VerticalAlignment="Top" Height="31" Width="150" Foreground="White" Background="Transparent"/>
        <Label Content="Música Ambiental:" HorizontalAlignment="Left" Margin="14,152,0,0" VerticalAlignment="Top" Height="39" Width="187" FontSize="18" Foreground="White"/>
        <CheckBox x:Name="checkBoxMusicaAmbiental" Content="Sí" HorizontalAlignment="Left" Margin="251,159,0,0" VerticalAlignment="Top" Height="25" Width="52" Foreground="White"/>
        <Label Content="Local:" HorizontalAlignment="Left" Margin="17,186,0,0" VerticalAlignment="Top" Height="34" Width="62" FontSize="18" Foreground="White"/>
        <RadioButton x:Name="radioButtonLocalOnBreak" Content="OnBreak" HorizontalAlignment="Left" Margin="253,188,0,0" VerticalAlignment="Top" Height="22" Width="108" Foreground="White" Background="Transparent"/>
        <RadioButton x:Name="radioButtonLocalOtro" Content="Otro" HorizontalAlignment="Left" Margin="393,188,0,0" VerticalAlignment="Top" Height="22" Width="75" Foreground="White" Background="Transparent"/>
        <Label Content="Fecha y hora de inicio:" HorizontalAlignment="Left" Margin="17,217,0,0" VerticalAlignment="Top" Height="34" Width="199" FontSize="18" Foreground="White"/>
        <mah:DateTimePicker x:Name="fechaIni" HorizontalAlignment="Left" Margin="250,219,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha y hora de termino:" HorizontalAlignment="Left" Margin="17,252,0,0" VerticalAlignment="Top" Height="33" Width="214" FontSize="18" Foreground="White"/>
        <mah:DateTimePicker x:Name="fechaFin" HorizontalAlignment="Left" Margin="249,257,0,0" VerticalAlignment="Top"/>
        <Label Content="Asistentes:" HorizontalAlignment="Left" Margin="13,293,0,0" VerticalAlignment="Top" Height="33" Width="214" FontSize="18" Foreground="White"/>
        <Label Content="Personal Adicional:" HorizontalAlignment="Left" Margin="13,331,0,0" VerticalAlignment="Top" Height="33" Width="214" FontSize="18" Foreground="White"/>
        <TextBox x:Name="txt_asistentes" HorizontalAlignment="Left" Margin="251,295,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_personal" HorizontalAlignment="Left" Margin="251,338,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Contratar" HorizontalAlignment="Left" Margin="252,373,0,0" VerticalAlignment="Top" Width="95" Height="50" Background="CadetBlue" Foreground="White"/>
    </Grid>
</Page>