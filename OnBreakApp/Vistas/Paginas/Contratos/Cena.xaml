<Page x:Class="Vistas.Paginas.Contratos.Cena"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vistas.Paginas.Contratos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cena">

    <Grid>
        <Label Content="Modalidad de Servicio:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" />
        <ComboBox x:Name="comboBoxModalidades" HorizontalAlignment="Left" Margin="248,10,0,0" VerticalAlignment="Top" Width="230" Height="34"/>
        <Label Content="Ambientación*:" HorizontalAlignment="Left" Margin="14,67,0,0" VerticalAlignment="Top" Height="44" Width="187" FontSize="18" Foreground="White"/>
        <RadioButton x:Name="radioButtonAmbientacionBasica" Content="Básica" HorizontalAlignment="Left" Margin="250,76,0,0" VerticalAlignment="Top" Height="31" Width="88" Foreground="White" Background="Transparent"/>
        <RadioButton x:Name="radioButtonAmbientacionPersonalizada" Content="Personalizada" HorizontalAlignment="Left" Margin="390,76,0,0" VerticalAlignment="Top" Height="31" Width="150" Foreground="White" Background="Transparent"/>
        <Label Content="Música Ambiental:" HorizontalAlignment="Left" Margin="14,123,0,0" VerticalAlignment="Top" Height="45" Width="187" FontSize="18" Foreground="White"/>
        <CheckBox x:Name="checkBoxMusicaAmbiental" Content="Sí" HorizontalAlignment="Left" Margin="250,127,0,0" VerticalAlignment="Top" Height="31" Width="52" Foreground="White"/>
        <Label Content="Local:" HorizontalAlignment="Left" Margin="14,179,0,0" VerticalAlignment="Top" Height="44" Width="62" FontSize="18" Foreground="White"/>
        <RadioButton x:Name="radioButtonLocalOnBreak" Content="OnBreak" HorizontalAlignment="Left" Margin="250,179,0,0" VerticalAlignment="Top" Height="30" Width="108" Foreground="White" Background="Transparent"/>
        <RadioButton x:Name="radioButtonLocalOtro" Content="Otro" HorizontalAlignment="Left" Margin="390,179,0,0" VerticalAlignment="Top" Height="30" Width="75" Foreground="White" Background="Transparent"/>
        <Button Content="Contratar" HorizontalAlignment="Left" Margin="248,225,0,0" VerticalAlignment="Top" Width="95" Height="50" Background="CadetBlue" Foreground="White"/>
    </Grid>
</Page>
