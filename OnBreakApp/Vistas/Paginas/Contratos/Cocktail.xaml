<Page x:Class="Vistas.Paginas.Contratos.Cocktail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vistas.Paginas.Contratos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cocktail">

    <Grid>
        <Label Content="Modalidad de Servicio:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="comboBoxModalidades" HorizontalAlignment="Left" Margin="248,10,0,0" VerticalAlignment="Top" Width="230" Height="34"/>
        <Label Content="¿Ambientación?:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Height="36" Width="155" FontSize="18"/>
        <RadioButton x:Name="radioButtonAmbientacionBasica" Content="Básica" HorizontalAlignment="Left" Margin="248,72,0,0" VerticalAlignment="Top" Height="35" Width="74"/>
        <RadioButton x:Name="radioButtonAmbientacionPersonalizada" Content="Personalizada" HorizontalAlignment="Left" Margin="352,72,0,0" VerticalAlignment="Top" Height="35" Width="112"/>
        <Label Content="¿Música Ambiental?" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Height="38" Width="185" FontSize="18"/>
        <CheckBox x:Name="checkBoxMusicaAmbiental" Content="Sí" HorizontalAlignment="Left" Margin="248,131,0,0" VerticalAlignment="Top" Height="19" Width="37"/>
        <Button Content="Contratar" HorizontalAlignment="Left" Margin="246,171,0,0" VerticalAlignment="Top" Width="95" Height="33" Background="{DynamicResource MahApps.Brushes.Accent}"/>
    </Grid>
</Page>
