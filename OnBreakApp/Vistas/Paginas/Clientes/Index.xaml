<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Vistas.Paginas.Clientes"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        x:Class="Vistas.Paginas.Clientes.Index"
        mc:Ignorable="d"
        Title="OnBreakApp" Height="600" Width="1000">
    <Grid>
        <Button x:Name="btn_listado" HorizontalAlignment="Left" Margin="668,138,0,0" VerticalAlignment="Top" Height="154" Width="312" Background="Cyan"  FontSize="18" Click="btn_listado_Click">
            <StackPanel>
                <Image Source="/cliente.png" Width="100"/>
                <Label Content="LISTADO DE CLIENTES"/>
            </StackPanel>
        </Button>
        <Button x:Name="btn_agregar" HorizontalAlignment="Left" Margin="668,342,0,0" VerticalAlignment="Top" Height="168" Width="312" Background="CornflowerBlue"  FontSize="18" Click="btn_agregar_Click">
            <StackPanel RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.717"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <Image Source="/añadir_cliente.png" Width="100"/>
                <Label Content="AGREGAR CLIENTES" Height="31"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="txt_busqueda" Controls:TextBoxHelper.Watermark="Buscar" HorizontalAlignment="Left" Margin="706,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="237" Controls:TextBoxHelper.ClearTextButton="True" Height="32" />
        <Button x:Name="btn_volver" Content="VOLVER" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Height="33" Width="118" Click="btn_volver_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="-58,226,0,0" VerticalAlignment="Top"/>

        <DataGrid x:Name="miTabla" AutoGenerateColumns="False" Margin="45,175,374,175" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RUT" Binding="{Binding RutCliente}" />
                <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" />
                <DataGridTextColumn Header="Nombre Contacto" Binding="{Binding NombreContacto}" />
                <DataGridTextColumn Header="Correo Contacto" Binding="{Binding MailContacto}" />
                <DataGridTextColumn Header="Direccion" Binding="{Binding Direccion}" />
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" />
                <DataGridTextColumn Header="Actividad Empresa" Binding="{Binding IdActividadEmpresa}" />
                <DataGridTextColumn Header="Tipo Empresa" Binding="{Binding TipoEmpresa}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_Buscar" Content="Buscar" HorizontalAlignment="Left" Margin="650,35,0,0" VerticalAlignment="Top" Width="56" Click="btn_Buscar_Click" RenderTransformOrigin="-1.911,0.807" Height="32" Background="CornflowerBlue"/>

    </Grid>
</mah:MetroWindow>
