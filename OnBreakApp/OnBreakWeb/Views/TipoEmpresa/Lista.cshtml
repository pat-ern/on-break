@model List<TipoEmpresa>

<div class="card p-0">
    <div class="card-header">
        <div class="row">

            <div class="col col-6">
                <h4 class="card-title mt-1">
                    <i class="fa-solid fa-list-check"></i>&nbsp;
                    Lista Tipos de Empresa
                </h4>
            </div>

            <div class="col col-6 text-end">
                <a class="nav-link text-dark" asp-area="" asp-controller="ActividadEmpresa" asp-action="Add">
                    <button type="button" class="btn btn-primary">
                        <i class="fa-solid fa-plus"></i>
                        Agregar Tipo de empresa
                    </button>
                </a>
            </div>

        </div>
    </div>
    <div class="card-body py-1">
        <div class="table-responsive" style="height:600px;overflow-x: auto;">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Descripción</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var tipoEmpresa in Model)
                        {
                            <tr>
                                <th scope="row">@tipoEmpresa.IdTipoEmpresa</th>
                                <td scope="row">@tipoEmpresa.Descripcion</td>

                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@tipoEmpresa.IdTipoEmpresa"><i class="fas fa-edit"></i></a>
                                    &nbsp;
                                    <a asp-action="Delete" asp-route-id="@tipoEmpresa.IdTipoEmpresa" onclick="return confirm('¿Estás seguro de que deseas eliminar el tipo de empresa?')"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9">No se encontraron tipos de empresa.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
